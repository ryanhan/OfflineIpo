<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="80dp"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingTop="80dp"
    tools:context="cn.ryanman.app.offlineipo.main.CreateUserActivity">


    <EditText
        android:id="@+id/user_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center_horizontal"
        android:hint="@string/input_user_name"
        android:textColor="@android:color/black"
        android:textColorHint="@color/hint_grey"
        android:textSize="@dimen/activity_create_user_title_font" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/create_user_vertical_margin_down"
        android:layout_marginTop="@dimen/create_user_vertical_margin_up"
        android:background="?android:attr/listDivider" />

    <EditText
        android:id="@+id/user_sh_code_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center_horizontal"
        android:hint="@string/input_user_sh_code"
        android:textColor="@android:color/black"
        android:textColorHint="@color/hint_grey"
        android:textSize="@dimen/activity_create_user_title_font" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/create_user_vertical_margin_down"
        android:layout_marginTop="@dimen/create_user_vertical_margin_up"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_sh_market_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="@string/user_market_value"
            android:textColor="@android:color/black"
            android:textSize="@dimen/activity_create_user_title_font" />

        <Spinner
            android:id="@+id/user_sh_market_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/adapter_create_user_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/save"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</LinearLayout>