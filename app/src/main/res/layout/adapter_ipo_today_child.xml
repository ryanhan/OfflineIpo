<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/adapter_ipo_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/ipo_today_event_vertical_padding"
        android:layout_marginLeft="@dimen/ipo_today_event_horizontal_padding"
        android:layout_marginTop="@dimen/ipo_today_event_vertical_padding"
        android:textSize="@dimen/ipo_today_ipo_name_font_size" />

    <TextView
        android:id="@+id/adapter_ipo_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/adapter_ipo_name"
        android:layout_below="@id/adapter_ipo_name"
        android:textSize="@dimen/ipo_today_ipo_code_font_size" />

</RelativeLayout>
